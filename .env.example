# Environment Configuration for Telefonchi Bot
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=telegram_bot
DB_USER=root
DB_PASSWORD=your_password_here

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
APP_NAME=Telefonchi Bot
APP_VERSION=1.0.0

# Advertisement Configuration
ADVERTISEMENT_PRICE=5000

# Optional: Webhook URL (for production)
WEBHOOK_URL=https://your-domain.com/api/v1/webhook

# Mini App URL (update this to your production Mini App URL)
MINI_APP_URL=https://your-miniapp-domain.com